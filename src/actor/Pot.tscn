# Called when the node enters the scene tree for the first time.
func _ready():
	if Engine.editor_hint:
		return
	
	var s = $Sprite
	
	s.frame = randi() % 22
	if s.frame > 11:
		s.flip_h = randf() > 0.5
	
	if s.frame < 3:
		hitbox_x = 4
		hitbox_y = 7
	elif s.frame < 6:
		hitbox_x = 5
		hitbox_y = 7
	elif s.frame < 9:
		hitbox_x = 4
	elif s.frame < 12:
		hitbox_x = 5
	elif s.frame == 21:
		hitbox_x = 8
		hitbox_y = 6
		s.position = Vector2(0, -1)
	

